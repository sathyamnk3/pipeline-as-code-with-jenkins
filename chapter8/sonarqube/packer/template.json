{
    "variables" : {
        "region" : "AWS REGION",
        "aws_profile": "AWS PROFILE ID",
        "source_ami" : "Amazon Linux AMI 2 ID",
        "instance_type": "EC2 INSTANCE TYPE"
    },
    "builders" : [
        {
            "type" : "amazon-ebs",
            "profile" : "{{user `aws_profile`}}",
            "region" : "{{user `region`}}",
